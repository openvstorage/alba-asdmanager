[Unit]
Description=ALBA ASD
After=asd-manager.service asd-watcher.service

[Service]
Group=alba
User=alba
Restart=on-failure
RestartSec=10s
TimeoutStopSec=60
Environment=PYTHONPATH=:/opt/asd-manager
Environment=ALBA_LWT_ENGINE=libev
WorkingDirectory=/opt/asd-manager/source
LimitMEMLOCK=infinity
ExecStart=/usr/bin/alba asd-start --config <CONFIG_PATH> --log-sink <LOG_SINK>
ExecStartPre=/bin/sh -c "if [ ! -d /opt/asd-manager/run ]; then mkdir /opt/asd-manager/run; chown alba:alba /opt/asd-manager/run; fi; echo `alba version --terse` > /opt/asd-manager/run/<SERVICE_NAME>.version"

[Install]
WantedBy=asd-watcher.service
